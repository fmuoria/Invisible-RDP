<Window x:Class="InvisibleRDP.SystemTray.ConsentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvisibleRDP - User Consent Required" 
        Height="600" Width="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Remote Desktop Access Consent"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ConsentTextBlock" 
                       TextWrapping="Wrap"
                       FontSize="12"
                       Padding="10"
                       Background="#F5F5F5"/>
        </ScrollViewer>

        <CheckBox Grid.Row="2" 
                  x:Name="AcceptCheckBox"
                  Content="I have read and agree to provide consent for remote desktop access"
                  Margin="0,20,0,20"
                  FontSize="12"
                  FontWeight="Bold"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Accept" 
                    Width="100" Height="30"
                    Margin="0,0,10,0"
                    Click="AcceptButton_Click"
                    IsEnabled="{Binding ElementName=AcceptCheckBox, Path=IsChecked}"/>
            <Button Content="Decline" 
                    Width="100" Height="30"
                    Click="DeclineButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
