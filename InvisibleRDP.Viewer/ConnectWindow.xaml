<Window x:Class="InvisibleRDP.Viewer.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvisibleRDP Viewer - Connect" 
        Height="350" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="InvisibleRDP Viewer"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" 
                   Text="Connect to Remote Desktop"
                   FontSize="14"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Host IP Address:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="HostIpTextBox" 
                     Height="30"
                     VerticalContentAlignment="Center"
                     Text="127.0.0.1"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Port:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="PortTextBox" 
                     Height="30"
                     VerticalContentAlignment="Center"
                     Text="9876"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,20">
            <TextBlock Text="Password/Access Code:" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" 
                         Height="30"
                         VerticalContentAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="5" 
                   x:Name="StatusTextBlock"
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   FontSize="11"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Connect" 
                    Width="100" Height="35"
                    Margin="0,0,10,0"
                    Click="ConnectButton_Click"
                    FontWeight="Bold"/>
            <Button Content="Exit" 
                    Width="100" Height="35"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
