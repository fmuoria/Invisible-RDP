<Window x:Class="InvisibleRDP.Viewer.ViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvisibleRDP Viewer - Connected" 
        Height="600" Width="800"
        WindowState="Maximized"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Connected to: " 
                           Foreground="White" 
                           VerticalAlignment="Center"
                           Margin="0,0,5,0"/>
                <TextBlock x:Name="HostInfoText" 
                           Foreground="White" 
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" 
                           Foreground="LightGreen" 
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" 
                Background="Black"
                x:Name="ScreenBorder">
            <Canvas x:Name="ScreenCanvas" 
                    Background="#1E1E1E"
                    MouseMove="ScreenCanvas_MouseMove"
                    MouseDown="ScreenCanvas_MouseDown"
                    MouseUp="ScreenCanvas_MouseUp"
                    KeyDown="ScreenCanvas_KeyDown"
                    KeyUp="ScreenCanvas_KeyUp"
                    Focusable="True">
                <TextBlock Canvas.Left="10" Canvas.Top="10"
                           Foreground="Gray"
                           FontSize="14"
                           Text="Screen sharing will display here"/>
            </Canvas>
        </Border>

        <Border Grid.Row="2" 
                Background="#34495E" 
                Padding="10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Disconnect" 
                        Width="100" Height="30"
                        Click="DisconnectButton_Click"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
